
<div class='form-group'>
  <%= f.label :date, value: 'Date' %>
  <p class='font-weight-lighter'>Please input date in YYYY-MM-DD format (e.g. 2020-07-22). You can only have one daily menu per day.</p>
  <%= f.text_field :date, class: '', id: 'datepicker' %>
</div>

<div class='form-group'>
  <%= f.label :category, value: 'Choose a category for the course' %>

  <div class='card my-2'>
    <% @categories.each do |category| %>
      <p><%= category.name %></p>
      <% klass = f.object.class.model_name.param_key %>
      <%= f.select :course_ids, options_for_select(category.courses.map {|c| [c.name, c.id, {'data-price' => c.final_price}]}), {include_blank: true}, {class: "daily-menu-courses-dropdown", 'data-category-id' => category.id, name: "#{klass}[course_ids][]"} %>

      <div class='mb-3'> Suggested Price in $: <span id="dropdown-<%= category.id %>" class='suggested-prices'> </span> </div>
    <% end %>
  </div>

</div>

<div class='form-group'>
  <%= f.label :price, value: 'Suggested price is calculated from the sum of the prices of the above courses' %>
  <%= f.number_field :price, class: 'form-control', id: 'daily-menu-price-field' %>
</div>

<%= f.submit 'Save', class: 'btn btn-primary' %>

