<div class='p-3'>
  <%= link_to 'New Course', new_course_path, class: 'btn btn-outline-primary' %>
</div>
<div class='container-fluid'>
  <div class='row'>
    <% @courses.each do |course| %>

      <div class='card col-4'>
        <div class='card-body'>
          <h5 class='card-title'><%= course.name %></h5>
          <div class='card-text'>
            <p>Description: <%= course.description %> </p>
            <p>Category: <%= course.category.name %> </p>
            <% if course.measurement.present? %>
              <p>Quantity: <%= course.measurement.quantity %> <%= course.measurement.unit %> </p>
            <% end %>
            <%= link_to 'Edit course', edit_course_path(course) %>
            <%= link_to 'Delete course', course_path(course), method: :delete %>
          </div>
        </div>
      </div>

    <% end %>
  </div>
</div>